<Window x:Class="PROG6212POE12001640.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212POE12001640"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <Grid>
        <TextBox x:Name="user" BorderThickness="2" HorizontalAlignment="Left" Height="23" Margin="99,81,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="ppass" HorizontalAlignment="Left" BorderThickness="2" Height="23" Margin="99,153,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" Margin="99,50,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPass" Content="Password" HorizontalAlignment="Left" Margin="99,122,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" BorderBrush="AliceBlue" BorderThickness="2" HorizontalAlignment="Left" Margin="99,223,0,0" VerticalAlignment="Top" Width="75" Click="login_Click"/>
        <Label x:Name="lblRegister" Content="Register" HorizontalAlignment="Left" Margin="99,264,0,0" VerticalAlignment="Top" MouseDoubleClick="lblRegister_MouseDoubleClick"/>
    </Grid>
</Window>
